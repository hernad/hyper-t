{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "dist/main.js" 
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "yarn node debug",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["debug"],
            "port": 9229,
            "timeout": 30000
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 10000
        }
    ]
}