{

  "name": "hyper-t",
  "description": "Opis aplikacija obavezno radi instalera.",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Ernad Husremovic",
    "email": "hernad@bring.out.ba",
    "url": "https://www.bring.out.ba/"
  },
  "dependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^10.12.8",
    "electron": "^3.0.9"
  },
  "scripts": {
    "prestart": "yarn build",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node_modules/.bin/electron dist/main.js",
    "exe64": "electron-packager . hyper-t --platform linux --arch x64 --out out/ --ignore \"(installer|node_modules/electron.*)\"",
    "rpm64": "electron-installer-redhat --src out/hyper-t-linux-x64/ --arch x86_64 --config rhel_installer.json",
    "clean": "rimraf out && rimraf installer && rimraf dist",
    "installer": "yarn clean && yarn build && yarn exe64 && yarn rpm64"
  },
  "devDependencies": {
    "electron-installer-redhat": "^0.5.0",
    "electron-packager": "^12.2.0",
    "rimraf": "^2.6.2"
  }
}
